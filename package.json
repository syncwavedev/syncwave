{
    "version": "0.0.25",
    "name": "syncwave",
    "workspaces": [
        "packages/*"
    ],
    "type": "module",
    "engine": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "start": "tsx ./packages/scripts/src/playground.ts | tsx ./packages/scripts/src/log-prettify.ts",
        "toolbox": "dotenv -- tsx --import ./packages/server/src/instrumentation.ts ./packages/scripts/src/toolbox.ts | tsx ./packages/scripts/src/log-prettify.ts",
        "bootstrap": "npm install && npm install --workspaces && npm run build",
        "test": "npm test --workspaces",
        "build": "npm run build --workspaces",
        "dev": "run-p -l srv app dat",
        "srv": "npm run dev --workspace=syncwave-server",
        "app": "npm run dev --workspace=syncwave-app",
        "dat": "npm run dev --workspace=syncwave",
        "release": "bumpp"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@typescript-eslint/parser": "^8.29.0",
        "bumpp": "^10.2.3",
        "dotenv-cli": "^8.0.0",
        "editorconfig": "^2.0.0",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-n": "^17.17.0",
        "eslint-plugin-prettier": "^5.2.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.5.3",
        "prettier-plugin-organize-imports": "^3.2.3",
        "rimraf": "^6.0.1",
        "tsx": "^4.15.6",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.29.0",
        "vite": "^6.2.1",
        "vitest": "^2.0.5"
    },
    "prettier": {
        "bracketSpacing": false,
        "arrowParens": "avoid",
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 80,
        "plugins": [
            "prettier-plugin-organize-imports"
        ]
    }
}
