        "@types/pg-cursor": "^2.7.2",
        "@types/ws": "^8.5.13",
        "pino-pretty": "^13.0.0",
        "rimraf": "^6.0.1",
        "tsx": "^4.17.0",
        "typedoc": "^0.26.5",
        "vitest": "^1.6.0"
    },
    "dependencies": {
        "@aws-sdk/client-ses": "^3.731.1",
