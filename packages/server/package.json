        "@opentelemetry/semantic-conventions": "^1.30.0",
        "foundationdb": "1",
        "better-sqlite3": "^11.8.0",
        "bufferutil": "^4.0.9",
        "dotenv": "^16.4.7",
        "jsonwebtoken": "^9.0.2",
        "koa": "^2.15.3",
