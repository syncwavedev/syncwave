    description="Syncwave is a kanban board for small dev teams. Realtime collaboration, rich messaging, and powerful task management – all in one tool."
    url="https://www.syncwave.dev/"
>
    <section
        class="hero-section relative flex min-h-[100vh] w-full max-w-[100vw] flex-col overflow-hidden max-md:mt-[50px]"
        id="hero-section"
    >
        <div
            class="flex h-full min-h-[100vh] w-full flex-col place-content-center gap-6 p-[5%] max-xl:place-items-center max-lg:p-4"
        >
            <div class="flex flex-col place-content-center items-center">
                <div
                    class="gradient-text text-center text-6xl font-semibold uppercase leading-[80px] max-lg:text-4xl max-md:leading-snug lg:max-w-[80%]"
                >
                    <span
                        >Kanban Board that Helps You Build Software People Love</span
                    >
                </div>
                <div
                    class="text-lg mt-10 max-w-[700px] p-2 text-center text-gray-300 max-lg:max-w-full"
                >
                    Syncwave is a kanban board that works best for small dev
                    teams. Realtime collaboration, rich messaging, and powerful
                    task management – all in one tool.
                </div>

                <div class="mt-10 flex place-items-center gap-4">
                    <a
                        class="btn bg-[#7e22ce85] shadow-lg shadow-primary transition-transform duration-[0.3s] hover:scale-x-[1.03]"
                        href="https://app.syncwave.dev/"
                    >
                        Get started free
                    </a>
                    <a
                        class="btn flex gap-2 !bg-black !text-white transition-colors duration-[0.3s] hover:!bg-white hover:!text-black"
                        href="https://app.syncwave.dev/demo"
                    >
                        <i class="bi bi-play-circle-fill"></i>
                        <span>Live demo</span>
                    </a>
                </div>
            </div>

            <div
                class="relative mt-8 flex w-full place-content-center place-items-center"
                id="dashboard-container"
            >
                <div
                    class="relative max-w-[80%] overflow-hidden rounded-xl bg-transparent max-md:max-w-full"
                    id="dashboard"
                >
                    <Image src={ScreenshotDark} alt="Syncwave screenshot" />
                </div>

                <div
                    class="hero-img-bg-grad absolute left-[20%] top-5 h-[200px] w-[200px]"
                >
                </div>
            </div>
        </div>
    </section>

